<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.voxtrail.voxtrail.view.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipeRevealLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                app:dragFromEdge="right">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_edit"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@drawable/ic_slider_gradient"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_edit_white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ic_location"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@drawable/ic_slider_gradient"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_slide_loc" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_play"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@drawable/ic_slider_gradient"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_slider_play" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_share"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@drawable/ic_slider_gradient"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_share"
                                android:tint="#FFFFFF"/>

                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <FrameLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp">

                                    <FrameLayout
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/vehicle_circle_layout">

                                        <ImageView
                                            android:id="@+id/iv_icon"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_car" />

                                    </FrameLayout>


                                    <FrameLayout
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_gravity="right|bottom"
                                        android:background="#FFFFFF">

                                        <ImageView
                                            android:id="@+id/iv_moving_status"
                                            android:layout_width="15dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:adjustViewBounds="true"
                                            android:src="@drawable/vehicle_moving_status" />
                                    </FrameLayout>

                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_object_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:gravity="center_vertical"
                                        android:text="Object Name"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_margin="2dp"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:src="@drawable/ic_date" />

                                            <TextView
                                                android:id="@+id/tv_date"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:text=""
                                                android:textSize="13sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:src="@drawable/ic_time" />

                                            <TextView
                                                android:id="@+id/tv_time"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:textSize="13sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Show Address"
                                    android:maxLines="2"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_status"
                                    android:tint="#757575"/>

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="Status" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_speed" />

                                <TextView
                                    android:id="@+id/tv_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="Speed" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_power"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_battery"
                                    android:tint="#757575"/>

                                <ImageView
                                    android:id="@+id/iv_wifi"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_wifi"
                                    android:layout_marginLeft="5dp"
                                    android:tint="#757575"/>

                                <ImageView
                                    android:id="@+id/iv_ignition"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_ignition"
                                    android:layout_marginLeft="5dp"
                                    android:tint="#757575"/>

                                <TextView
                                    android:id="@+id/tv_ignition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:visibility="gone"
                                    android:text="Ignition" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_ac_status"
                                    android:tint="#757575"/>

                                <TextView
                                    android:id="@+id/tv_ac_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:visibility="gone"
                                    android:text="Ac Status" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

            </com.voxtrail.voxtrail.view.SwipeRevealLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>